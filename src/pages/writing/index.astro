---
import Layout from '../../layouts/Layout.astro';

const articles = [
  
  {
    title: 'Implementing Doubly Linked List',
    slug: 'https://medium.com/@vsinghr21191/building-blocks-of-efficiency-crafting-a-doubly-linked-list-in-c-from-scratch-a642d1e60042',
    excerpt: 'Implementing Data structure from scratch helps you gain deeper understanding',
    date: 'June 17, 2025'
  },

];
---

<Layout title="Writing - adam dhalla">
  <section class="section writing">
    <div class="container">
      <h1>Writing</h1>
      <p class="intro">
        I write about cinema, technology, philosophy, science, and more. Here are a few of my recent favorite articles. For all my writing, visit my <a href="https://medium.com/@vsinghr21191" target="_blank">Medium</a>
      </p>
      
      <div class="articles-list">
        {articles.map((article) => (
          <a href={`/writing/${article.slug}`} class="article-item">
            <div class="article-content">
              <h2>{article.title}</h2>
              <p>{article.excerpt}</p>
            </div>
            <div class="article-meta">
              <span class="article-date">{article.date}</span>
              <span class="article-arrow">â†’</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .writing h1 {
    margin-bottom: var(--space-md);
  }

  .intro {
    font-size: 1.2rem;
    line-height: 1.6;
    max-width: 800px;
    margin-bottom: var(--space-lg);
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .article-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md);
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text);
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .article-item:hover {
    background-color: rgba(0, 0, 0, 0.02);
    text-decoration: none;
  }

  .article-content {
    flex: 1;
  }

  .article-item h2 {
    margin-bottom: var(--space-xs);
    font-size: 1.5rem;
    transition: color 0.2s ease;
  }

  .article-item:hover h2 {
    color: var(--color-accent);
  }

  .article-item p {
    color: var(--color-text-light);
    margin-bottom: 0;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding-left: var(--space-md);
  }

  .article-date {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .article-arrow {
    font-size: 1.2rem;
    color: var(--color-accent);
    transition: transform 0.2s ease;
  }

  .article-item:hover .article-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .article-item {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }

    .article-meta {
      width: 100%;
      justify-content: space-between;
      padding-left: 0;
    }
  }
</style>
